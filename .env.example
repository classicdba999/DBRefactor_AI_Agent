# Application Configuration
APP_NAME=DBRefactor AI Agent
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=change-this-in-production-to-a-secure-random-string
CORS_ORIGINS=*

# Source Database (Oracle)
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=1521
SOURCE_DB_NAME=ORCL
SOURCE_DB_USER=your_oracle_user
SOURCE_DB_PASSWORD=your_oracle_password

# Target Database (PostgreSQL)
TARGET_DB_HOST=localhost
TARGET_DB_PORT=5432
TARGET_DB_NAME=postgres
TARGET_DB_USER=your_postgres_user
TARGET_DB_PASSWORD=your_postgres_password

# Application Database (MySQL) - for migration tracking
APP_DB_HOST=localhost
APP_DB_PORT=3306
APP_DB_NAME=migration_tracker
APP_DB_USER=your_mysql_user
APP_DB_PASSWORD=your_mysql_password

# AI Configuration
# Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# OpenAI (Optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Agent Configuration
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=300

# Workflow Configuration
MAX_WORKFLOW_STEPS=100
WORKFLOW_STEP_TIMEOUT_SECONDS=600
